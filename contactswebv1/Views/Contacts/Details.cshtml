@model contactswebv1.Models.Contact

@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.Title - @Model.FriendlyName</h2>

<div>
    <h4>Contact</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayFor(model => model.FriendlyName)
        </dt>


        <dd>
            @Html.DisplayFor(model => model.FriendlyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        @if (Model.Birthday != null)
        {
            <dd>
                @Html.DisplayFor(model => model.Birthday)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.PhonePrimary)
            </dt>

        }

        <dd>
            @Html.DisplayFor(model => model.PhonePrimary)
        </dd>
        @if (!string.IsNullOrWhiteSpace(@Model.PhoneSecondary))
        {
            <dt>
                @Html.DisplayNameFor(model => model.PhoneSecondary)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhoneSecondary)
            </dd>

        }

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FriendlyAdderss)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FriendlyAdderss)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.State.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State.Name)
        </dd>



    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
